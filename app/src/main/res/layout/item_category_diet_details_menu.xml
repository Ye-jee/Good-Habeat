<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_rec_background4"
        android:padding="5dp">

        <ImageView
            android:id="@+id/menu_detail_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_detail_ex1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--app:riv_corner_radius="15dp"-->

        <TextView
            android:id="@+id/menu_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="4"
            android:text="수수밥"
            android:textColor="@color/main_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/menu_detail_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/menu_detail_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="2"
            android:text="탄수화물 36g 단백질 3g 지방 1g"
            android:textColor="#9A9A9A"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_detail_img"
            app:layout_constraintTop_toBottomOf="@+id/menu_detail_title" />

        <TextView
            android:id="@+id/menu_detail_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="2"
            android:text="168kcal"
            android:textColor="#9A9A9A"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_detail_img"
            app:layout_constraintTop_toBottomOf="@+id/menu_detail_information" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>