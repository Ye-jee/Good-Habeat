<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <TextView
        android:id="@+id/diet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="4"
        android:text="삼치간장조림 식단"
        android:textColor="@color/theme1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diet_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="수수밥 근대국 삼치간장조림 취나물볶음 총각김치"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_title" />

    <TextView
        android:id="@+id/diet_carbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="탄수화물 0g"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_food" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="|"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/diet_protein"
        app:layout_constraintStart_toEndOf="@+id/diet_carbo"
        app:layout_constraintTop_toTopOf="@+id/diet_carbo" />

    <TextView
        android:id="@+id/diet_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="단백질 0g"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/diet_food" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="|"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/diet_protein"
        app:layout_constraintTop_toTopOf="@+id/diet_carbo" />

    <TextView
        android:id="@+id/diet_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="지방 0g"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/diet_food" />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="총"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_carbo" />

    <TextView
        android:id="@+id/diet_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="619kcal"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/icon_category_diet_plus_btn" />

    <TextView
        android:id="@+id/diet_disease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="치매"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:shadowColor="#B3B3B3"
        android:shadowRadius="2"
        android:text="예방에 좋은 음식"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/diet_disease"
        app:layout_constraintStart_toEndOf="@+id/diet_disease"
        app:layout_constraintTop_toTopOf="@+id/diet_disease" />

    <ImageView
        android:id="@+id/borderLine_OfcategoryDiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="5dp"
        android:background="#B2F4F4F4"
        android:elevation="4dp"
        android:src="@drawable/border_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>