<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <!--app:riv_corner_radius="15dp"-->

        <ImageView
            android:id="@+id/menu_pic_day"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="4"
            android:text="Menu Name"
            android:textColor="@color/main_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/menu_carbo"
            app:layout_constraintStart_toEndOf="@+id/menu_pic_day"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/menu_carbo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="1"
            android:text="탄수화물 0g "
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/eat_done"
            app:layout_constraintStart_toEndOf="@+id/menu_pic_day"
            app:layout_constraintTop_toBottomOf="@+id/menu_name" />

        <TextView
            android:id="@+id/menu_protein"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="1"
            android:text="단백질 0g "
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_carbo"
            app:layout_constraintEnd_toStartOf="@+id/menu_fat"
            app:layout_constraintStart_toEndOf="@+id/menu_carbo"
            app:layout_constraintTop_toTopOf="@+id/menu_carbo" />


        <TextView
            android:id="@+id/menu_fat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="2"
            android:text="지방 0g"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu_protein"
            app:layout_constraintStart_toEndOf="@+id/menu_protein"
            app:layout_constraintTop_toTopOf="@+id/menu_protein" />

        <TextView
            android:id="@+id/menu_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="2"
            android:text="000 Kcal"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/menu_name"
            app:layout_constraintStart_toEndOf="@id/menu_name"
            app:layout_constraintTop_toTopOf="@id/menu_name" />


        <!--
        app:layout_constraintBottom_toTopOf="@+id/eat_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_pic_day"
            app:layout_constraintTop_toBottomOf="@+id/menu_carbo"
        -->

        <TextView
            android:id="@+id/eat_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#B3B3B3"
            android:shadowRadius="2"
            android:text="먹었어요!"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_carbo" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>